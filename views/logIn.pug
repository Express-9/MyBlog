extends _base

block home
  != messages()
  .container
    .row
      .col-md-6.col-md-offset-3
        .panel.panel-login
          .panel-heading
            .row
              .col-xs-12
                a(href='/blogs/' + currentUserName) Login
            hr
          .panel-body
            .row
              .col-lg-12
                form(action='/login', method='post', role='form', style='display: block;')
                  .form-group
                    input.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
                  .form-group
                    input.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                  .form-group
                    .row
                      .col-sm-6.col-sm-offset-3
                        input.form-control.btn.btn-login(type='submit', name='login-submit', tabindex='4', value='Log In')
